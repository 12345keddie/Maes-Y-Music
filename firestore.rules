rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /polls/{pollId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && isOwner(pollId);
    }

    match /polls/{pollId}/votes/{voteId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(pollId) {
      return get(/databases/$(database)/documents/polls/$(pollId)).data.owner == request.auth.uid;
    }
  }
}